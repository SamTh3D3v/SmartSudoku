<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
android:background="@drawable/backgraound"
    tools:context="com.ubo.elhamer.smartsudokuelhamer.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="0.26" />

        <Button
            android:text="Jouer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JouerButton"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/game"
            android:background="@color/colorOrange"/>

        <Button
            android:text="A propos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AboutButton"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/about"
            android:background="@color/colorOrange"/>
    </LinearLayout>
</RelativeLayout>
